  },
  "scripts": {
    "orbcli": "node --trace-warnings dist/cli/orbcli.js",
    "start": "node --trace-warnings dist/orb_node/index.js",
    "check-syntax": "tsc --strict --noEmit -p tsconfig.json",
    "check-syntax-watch": "tsc --strict -w --noEmit -p tsconfig.json",
    "build": "tsc --strict -p tsconfig-build.json",
    "clean": "rm -r ./dist && mkdir ./dist",
    "clean-build": "yarn run clean && yarn build",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "watch-ts": "tsc -w -p tsconfig-build.json",
    "watch-node": "nodemon dist/orb_node/index.js",
    "test": "jest --forceExit --coverage --verbose",
    "integration-test": "ts-node test-integration/integration.ts",
    "watch-test": "jest --forceExit --watch",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "docs": "compodoc -p tsconfig-build.json --customFavicon ./img/favicon.ico --includes doc_settings"
  },
  "pre-push": [
    "test",
    "integration-test",
    "tslint",
    "check-syntax",
    "docs"
  ]
}
